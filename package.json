{
  "name": "satsukita-andon.com",
  "version": "0.0.1",
  "description": "The frontend of satsukita-andon.com",
  "scripts": {
    "dev": "next src/app",
    "check": "npm run check:app && npm run check:functions",
    "fix": "npm run fix:app && npm run fix:functions",
    "build": "npm run clean && npm run build:functions && npm run build:app && npm run build:public && npm run build:deps",
    "serve": "NODE_ENV=production firebase serve --only functions,hosting",
    "deploy": "firebase deploy",
    "clean": "rimraf dist/functions && rimraf dist/public",
    "build:app": "NODE_ENV=production next build src/app",
    "build:functions": "tsc -p tsconfig.functions.json",
    "build:public": "cpx src/public/**/*.* dist/public -C",
    "build:deps": "npm run build-deps:package.json && npm run build-deps:package-lock.json && npm run build-deps:install",
    "build-deps:package.json": "cat package.json | jq \". | { name: .name, dependencies: .dependencies, repository: .repository, author: .author, license: .license }\" > dist/functions/package.json",
    "build-deps:package-lock.json": "cpx package-lock.json dist/functions",
    "build-deps:install": "npm --prefix dist/functions i dist/functions",
    "check:app": "tsc --noEmit -p tsconfig.app.json && tslint -p tsconfig.app.json && prettier -l src/app/**/*.{js,jsx,ts,tsx}",
    "check:functions": "tsc --noEmit -p tsconfig.functions.json && tslint -p tsconfig.functions.json && prettier -l src/functions/**/*.{js,jsx,ts,tsx}",
    "fix:app": "tslint --fix -p tsconfig.app.json && prettier --write src/app/**/*.{js,jsx,ts,tsx}",
    "fix:functions": "tslint --fix -p tsconfig.functions.json && prettier --write src/functions/**/*.{js,jsx,ts,tsx}"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tousetsukai/satsukita-andon.com.git"
  },
  "author": "tousetsukai <tousetsukai@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/tousetsukai/satsukita-andon.com/issues"
  },
  "homepage": "https://github.com/tousetsukai/satsukita-andon.com#readme",
  "dependencies": {
    "firebase-admin": "^8.12.1",
    "firebase-functions": "^3.6.2",
    "next": "^9.4.4",
    "react": "^16.13.1",
    "react-dom": "^16.13.1"
  },
  "devDependencies": {
    "@types/react": "^16.9.35",
    "@types/react-dom": "^16.9.8",
    "@typescript-eslint/eslint-plugin": "^2.34.0",
    "@typescript-eslint/parser": "^2.34.0",
    "cpx": "^1.5.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-react": "^7.20.0",
    "eslint-plugin-react-hooks": "^4.0.4",
    "firebase-tools": "^8.4.1",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.7",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
