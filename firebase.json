{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "functions": {
    "source": "dist/functions",
    "predeploy": [
      "npm i",
      "npm run build",
      "npm run install-server-package"
    ]
  },
  "hosting": {
    "public": "dist/public",
    "rewrites": [
      {
        "source": "**/**",
        "function": "nextApp"
      }
    ],
    "predeploy": "mkdir -p dist/public"
  },
  "storage": {
    "rules": "storage.rules"
  }
}
