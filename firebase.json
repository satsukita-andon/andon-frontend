{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "functions": {
    "source": "dist/functions",
    "predeploy": [
      "npm i",
      "npm run build",
      "npm run install-server-package"
    ]
  },
  "hosting": {
    "public": "public",
    "rewrites": [
      {
        "source": "**",
        "function": "nextApp"
      }
    ]
  },
  "storage": {
    "rules": "storage.rules"
  }
}
